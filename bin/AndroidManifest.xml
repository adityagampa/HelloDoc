            android:label="@string/title_activity_patients_appointment_list" >
        </activity>
        <activity
            android:name=".PatientsAppointments"
            android:label="@string/title_activity_patients_appointments" >
        </activity>
        <activity
            android:name=".DocFirstRegistration"
            android:label="@string/title_activity_doc_first_registration" >
        </activity>
        <activity
            android:name=".DocDetails"
            android:label="@string/title_activity_doc_details" >
        </activity>
    </application>
    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>
