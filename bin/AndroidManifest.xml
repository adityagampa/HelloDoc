            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DoctorRegistration"
            android:label="@string/title_activity_doctor_registration" >
        </activity>
        <activity
            android:name=".DoctorLogin"
            android:label="@string/title_activity_doctor_login" >
        </activity>
        <activity
            android:name=".DoctorSecondRegistration"
            android:label="@string/title_activity_doctor_second_registration" >
        </activity>
        <activity
            android:name=".PatientRegistration"
            android:label="@string/title_activity_patient_registration" >
        </activity>
        <activity
            android:name=".PatientSecondRegistration"
            android:label="@string/title_activity_patient_second_registration" >
        </activity>
        <activity
            android:name=".PatientLogin"
            android:label="@string/title_activity_patient_login" >
        </activity>
        <activity
            android:name=".PLogin"
            android:label="@string/title_activity_plogin" >
        </activity>
        <activity
            android:name=".PatientsLogin"
